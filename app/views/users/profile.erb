<% if current_user == @profile_user %>
	<h3>Welcome, <%= current_user.name %>!</h3>
<% else %>
	  <h3>Welcome to <%= @profile_user.name %>'s Profile!</h3>
<% end %>

<div id="user-joke-tags-container">
  <%= erb :'jokes/_index', locals: { max_joke_title_length: @max_joke_title_length, title: "Favorite Jokes" } %>
</div>

<form method="get" action="/tags">
	<input class="return_button" type="submit" value="Return">
</form>
